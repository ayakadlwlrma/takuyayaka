<%= form_for @genre do |f| %>
    <div class="field">
        <%= f.label :曲 %>
        <%= f.text_field :song, :size => 140 %>
    </div>

    <div class="field">
        <%= f.label :歌手 %>
        <%= f.text_field :singer, :size => 140 %>
    </div>

    <%= f.submit "submit" %>
<% end %>

<%= link_to "一覧へ", genres_path %>